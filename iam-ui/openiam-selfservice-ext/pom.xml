    <packaging>war</packaging>
    <name>SelfService-Ext</name>
    <description>SelfService-Ext Web WAR</description>
    <ciManagement>
        <system>idm</system>
        <url>http://build.openiam.org:8080/selfservice-ext/</url>
        <notifiers>
            <notifier>
                <configuration>
                    <address>suneet_shah@openiam.com</address>
                    <address>arun_shah@openiam.com</address>
                </configuration>
            </notifier>
        </notifiers>
    </ciManagement>
    <developers>
        <developer>
            <id>arun_shah</id>
            <name>Arun Shah</name>
            <email>arun_shah@openiam.com</email>
            <organization>OpenIAM LLC</organization>
            <organizationUrl>www.openiam.com</organizationUrl>
            <timezone>GMT-5</timezone>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <build>
        <finalName>selfservice-ext</finalName>
        <!--<pluginManagement>-->
        <plugins>
            <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
            <plugin>
                <groupId>org.eclipse.m2e</groupId>
                <artifactId>lifecycle-mapping</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exploded</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <includes>
                        <include>target/${project.build.finalName}/WEB-INF/**/*.jsp</include>
                    </includes>
                    <regex>true</regex>
                    <replacements>
                        <replacement>
                            <token>${jsp.script.version.token}</token>
                            <value>${js.script.version.value}</value>
                        </replacement>
                        <replacement>
                            <token>${jsp.css.version.token}</token>
                            <value>${jsp.css.version.value}</value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>
        </plugins>
        <!--</pluginManagement>-->
    </build>
